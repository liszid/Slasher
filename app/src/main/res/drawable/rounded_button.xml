<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80000000"/> <!-- Árnyék színe -->
            <corners android:radius="16dp"/>
        </shape>
    </item>
    <item android:left="4dp" android:top="4dp"> <!-- Árnyék eltolása -->
        <shape android:shape="rectangle">
            <solid android:color="#FF0000"/> <!-- Gomb színe -->
            <corners android:radius="16dp"/>
            <stroke
                android:width="2dp"
                android:color="#B00000"/>
            <padding
                android:left="16dp"
                android:top="8dp"
                android:right="16dp"
                android:bottom="8dp"/>
        </shape>
    </item>
</layer-list>
